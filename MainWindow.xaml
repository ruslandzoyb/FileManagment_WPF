<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:WpfApp1.MVVM.ViewModels" xmlns:models="clr-namespace:WpfApp1.MVVM.ViewModels" d:DataContext="{d:DesignInstance Type=models:ApplicationViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        >

    <Grid  >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        

            <Button  Grid.Column="0" Grid.Row="0"  Command="{Binding Path=SelectFolderPath}">Выбор пути
            </Button>
            <Label Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right">Text:</Label>
            <Button Grid.Column="0" Grid.Row="1" Command="{Binding Path=CreateFile}" >Create</Button>
            <Label Grid.Column="1" Grid.Row="1"  Content="selectedFile:" HorizontalAlignment="Right"/>
        <Button  Grid.Column="0" Grid.Row="2" Command="{Binding Path=SelectFileCommand}">Выбор файла</Button>
        <TextBox  x:Name="textBox" Grid.Column="2" Grid.Row="0"  Text="{Binding DialogManagment.Text, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <TextBox x:Name="selectedFile" Grid.Column="2" Grid.Row="1"  Text="{Binding Path=DialogManagment.SelectedFile}" TextWrapping="Wrap"/>

        </Grid>

</Window>
